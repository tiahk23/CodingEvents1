<h1>Delete Event</h1>
<form method="post">
    @foreach(var evt in ViewBag.events)
     {
         <div class="form-group">
             <label>
                 <span>@evt.Name</span>
                     <input type="checkbox" name="eventIds" value="@evt.Id" />
             </label>
         </div>
     }
    <input type="submit" name="Delete Selected Events" class="btn btn-danger"/>
</form>
